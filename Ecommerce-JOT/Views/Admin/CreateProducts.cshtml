@{
    Layout = "_AdminLayout";
}

@model Ecommerce_JOT.ViewModels.ProductFormVM;

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Create products</h5>
                <small class="text-muted float-end">Default label</small>
            </div>
            <div class="card-body">
                <form method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Product Name</label>
                        <input type="text" class="form-control" id="basic-default-fullname"
                        name="Product.Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Product Description</label>
                        <input type="text" class="form-control" id="basic-default-company" name="Product.description" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Product price</label>
                        <input type="text" class="form-control" id="basic-default-company" name="Product.price"/>
                    </div>



                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Product Quantity</label>
                        <input type="text" class="form-control" id="basic-default-company" name="Product.qty"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Select A Category</label>
                        <select class="form-control" name="Product.CatID">
                            <option value="">Select</option>

                            @{
                                foreach(var cat in Model.Categories)
                                {
                                    <option value="@cat.Value">@cat.Text</option>
                                }
                            }
                      </select>
                    </div>

             

                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>